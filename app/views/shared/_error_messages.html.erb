<% if object && object.errors.any? %>
    <div id="error-explanation">
        <div class="alert alert-danger">
            No-can-do`s-ville, baby doll! Detected <%= pluralize(object.errors.count, "error") %>
        </div>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>