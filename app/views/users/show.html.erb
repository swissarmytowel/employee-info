<%provide(:title, @user.name)%>
<html>
  <head>
    <title><%= yield(:title) %></title>
  </head>
  <body>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <h1> Signed up as <b><%= @user.name %></b></h1>
          <h2> <%= @user.email %></h2>
        </section>
        <div class="container">
          <h1> Your employees <%= link_to 'Add', create_path, class: "btn btn-success profile-btn-add"%> </h1>
          <% if @user.employees.any? %>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Telegram Handle</th>
                  <th scope="col">Projects</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <%= render @employees %>
              </tbody>
            </table>
            <%= will_paginate @employees %>
          <% end %>
        </div>
      </aside>
    </div>
  </body>
</html>
